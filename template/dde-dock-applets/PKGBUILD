pkgname=dde-dock-applets
pkgver=0.0.4.20150414222121
_srcdirname=dde-dock-applets-0.0.4+20150414222121~22d474967c
pkgrel=1
pkgdesc="New control center for linux deepin"
arch=('i686' 'x86_64')
url="https://gitcafe.com/Deepin/dde-dock-applets"
license=('GPL3')
depends=('dde-daemon' 'dde-api' 'deepin-qml-widgets' 'dde-qml-dbus-factory'
         'gtk2' 'qt5-svg' 'qt5-declarative')
makedepends=('deepin-gettext-tools' 'qt5-tools' 'python2')
groups=('deepin')
source=("http://packages.linuxdeepin.com/deepin/pool/main/d/dde-dock-applets/dde-dock-applets_0.0.4+20150414222121~22d474967c.tar.gz")
sha256sums=('b77ecebe2559d77b2077a8acd65c9608737ff7503cbe50a286faf47a3718ecde')

build() {
  cd "${_srcdirname}"

  make
}

package() {
  depends+=('deepin-artwork-themes')

  cd "${_srcdirname}"

  make DESTDIR="${pkgdir}" install
}

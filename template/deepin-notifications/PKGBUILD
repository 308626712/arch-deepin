# Maintainer: Xu Fasheng <fasheng.xu[AT]gmail.com>

pkgname=deepin-notifications
pkgver=0.3+20141216180805~a93d61767c
pkgrel=1
pkgdesc="System notifications for linuxdeepin desktop environment."
arch=('i686' 'x86_64')
url="https://gitcafe.com/Deepin/deepin-notifications"
license=('GPL3')
groups=('deepin')
depends=('qt5-declarative' 'qt5-svg')
conflicts=('notify-osd')
_mirror="https://ftp.fau.de/deepin/pool/main"
source=("${_mirror}/d/${pkgname}/${pkgname}_${pkgver}.tar.gz")
sha256sums=('SKIP')

build() {
  cd "${pkgname}-${pkgver}"

  qmake PREFIX=/usr
  make
}

package() {
  cd "${pkgname}-${pkgver}"

  make INSTALL_ROOT="${pkgdir}" install
}

pkgname=deepin-artwork
pkgver=@PKGVER@
pkgrel=1
pkgdesc='Deepin artwork themes (sounds)'
arch=('any')
license=('LGPL3')
url="http://www.linuxdeepin.com/"
groups=('deepin')
source=("@SOURCE@")
sha256sums=('@SHA256SUM@')

package() {
  cd "$srcdir"

  ar xv ${pkgname}_${pkgver}-4_all.deb
  tar -C "$pkgdir" -xvzf data.tar.gz
  rm -rf "${pkgdir}"/usr/share/doc
}

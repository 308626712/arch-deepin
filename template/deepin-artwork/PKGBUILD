pkgname=deepin-artwork
pkgver=2014.4
_pkgver=2014-4
pkgrel=1
pkgdesc='Deepin artwork themes (sounds)'
arch=('any')
license=('LGPL3')
url="http://www.linuxdeepin.com/"
groups=('deepin')
_mirror="http://packages.linuxdeepin.com/deepin/pool/main"
source=("${_mirror}/d/${pkgname}/${pkgname}_${_pkgver}.tar.gz")
sha256sums=('SKIP')

package() {
  # TODO
  cd "${srcdir}/${pkgname}-2014"

  install -dm755 "${pkgdir}"/usr/share
  cp -r usr/share/{pixmaps,sounds} "${pkgdir}"
}

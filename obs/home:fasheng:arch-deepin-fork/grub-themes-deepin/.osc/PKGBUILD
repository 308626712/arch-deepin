pkgname=grub-themes-deepin
pkgver=0.5
pkgrel=9
pkgdesc='Grub2 themes from Linux Deepin'
arch=('any')
url="http://www.linuxdeepin.com/"
license=('GPL2')
groups=('deepin')
depends=('grub')

_fileurl=http://packages.linuxdeepin.com/deepin/pool/universe/g/grub-themes-deepin/grub-themes-deepin_0.5-9.tar.gz
source=("${_fileurl}")
sha256sums=('9c951864d49f58a253bc310342ec8d23fd78aa1683188a79a91e3f979091f842')

_innerdir="${pkgname}-${pkgver}"

package() {
    cd "${srcdir}/${_innerdir}"
    install -dm644 "${pkgdir}"/boot/grub/themes
    cp -rf deepin-grub2-themes/deepin "${pkgdir}"/boot/grub/themes/
}

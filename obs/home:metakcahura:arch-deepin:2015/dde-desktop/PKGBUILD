pkgname=dde-desktop
pkgver=2.90.0
_commit=8b115f455880f6819205039a1b38ffb6396e42ff
pkgrel=4
pkgdesc='deepin desktop-environment - desktop module'
arch=('i686' 'x86_64')
url="https://github.com/linuxdeepin/dde-desktop"
license=('GPL3')
depends=('deepin-file-manager' 'libdui' 'gsettings-qt'
		 'gtk2' 'qt5-svg' 'qt5-x11extras')
makedepends=('git')
groups=('deepin')
#source=("git+https://github.com/linuxdeepin/dde-desktop.git#commit=$_commit")
source=('dde-desktop.tar.xz')
sha256sums=('SKIP')

build(){
	cd dde-desktop
	qmake-qt5 PREFIX=/usr
	make
}

package() {
	cd dde-desktop
	make INSTALL_ROOT="${pkgdir}" install
}

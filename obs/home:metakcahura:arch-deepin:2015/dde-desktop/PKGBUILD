# Maintainer: Xu Fasheng <fasheng.xu[AT]gmail.com>

pkgname=dde-desktop
pkgver=0.0.2.20150107093816
pkgrel=1
pkgdesc='deepin desktop-environment - desktop module'
arch=('i686' 'x86_64')
url="https://cr.deepin.io/dde/dde-desktop"
license=('GPL3')
depends=('deepin-file-manager-backend' 'gtk2'
		 'gsettings-qt' 'qt5-svg' 'qt5-x11extras')
groups=('deepin')
source=("${pkgname}-${pkgver}.tar.xz")
sha256sums=('SKIP')

build(){
	cd "${pkgname}-${pkgver}"
	qmake-qt5 PREFIX=/usr
	make
}

package() {
	cd "${pkgname}-${pkgver}"
	make INSTALL_ROOT="${pkgdir}" install
}

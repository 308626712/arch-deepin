# Maintainer: Josip Ponjavic <josipponjavic at gmail dot com>
# Maintainer: Xu Fasheng <fasheng.xu[AT]gmail.com>

pkgname=deepin-dbus-generator
pkgver=0.0.3.20141120163131
pkgrel=1
pkgdesc='Convert dbus interfaces to go-lang or qml wrapper code'
arch=('i686' 'x86_64')
url="https://gitcafe.com/Deepin/go-dbus-generator"
license=('GPL3')
depends=('glibc')
makedepends=('go-packages' 'qt5-declarative')
groups=('deepin-dev')
source=("go-dbus-generator-${pkgver}.tar.xz")
sha256sums=('SKIP')

build() {
	export GOPATH="/usr/lib/go"

	cd go-dbus-generator-${pkgver}
	go build -o out/dbus-generator
}

package() {
	install -Dm 755 go-dbus-generator-${pkgver}/out/dbus-generator "${pkgdir}"/usr/bin/dbus-generator
}

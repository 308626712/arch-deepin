# Maintainer: Xu Fasheng <fasheng.xu[AT]gmail.com>

pkgname=dde-session-ui
pkgver=0.0.2.20150107093816
pkgrel=1
pkgdesc='deepin desktop-environment - dde session ui module'
arch=('i686' 'x86_64')
url="https://cr.deepin.io/dde/dde-session-ui"
license=('GPL3')
depends=('gsettings-qt' 'libdui' 'liblightdm-qt5' 'qt5-svg')
groups=('deepin')
source=("${pkgname}-${pkgver}.tar.xz")
sha256sums=('SKIP')

build(){
	cd "${pkgname}-${pkgver}"
	qmake-qt5 PREFIX=/usr
	make
}

package() {
	cd "${pkgname}-${pkgver}"
	make INSTALL_ROOT="${pkgdir}" install
}

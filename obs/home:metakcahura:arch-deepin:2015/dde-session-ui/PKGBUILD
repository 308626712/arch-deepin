pkgname=dde-session-ui
pkgver=2.91.0
_commit=418cd682d5989eb0fe8181509fee50e87bfaad05
pkgrel=3
pkgdesc='deepin desktop-environment - dde session ui module'
arch=('i686' 'x86_64')
url="https://github.com/linuxdeepin/dde-session-ui"
license=('GPL3')
groups=('deepin')
depends=('gsettings-qt' 'libdui' 'liblightdm-qt5' 'qt5-svg')
provides=('lightdm-deepin-greeter')
replaces=('dde-workspace')
#source=("git+https://github.com/linuxdeepin/dde-session-ui.git#commit=$_commit")
source=("dde-session-ui.tar.xz")
sha256sums=('SKIP')

build() {
	cd "dde-session-ui"
	qmake-qt5 PREFIX=/usr
	make
}

package() {
	cd "dde-session-ui"
	make INSTALL_ROOT="${pkgdir}" install
}

# Maintainer: Xu Fasheng <fasheng.xu[AT]gmail.com>

pkgname=deepin-dbus-factory
pkgver=2.92.0
pkgrel=1
pkgdesc='QML DBus factory for DDE'
arch=('i686' 'x86_64')
url="https://github.com/linuxdeepin/dbus-factory"
license=('GPL3')
depends=('qt5-declarative')
makedepends=('git' 'deepin-dbus-generator')
# source=("git+https://github.com/linuxdeepin/dbus-factory.git#tag=$_pkgver"
#        'fix-arch.patch')
source=("${pkgname}-${pkgver}.tar.xz"
		'fix-arch.patch')
sha256sums=('SKIP'
            'bf4b84b2d5cd063a95318877975ead0d15113a91d0ff1703b2af4f222323cac0')

prepare() {
	cd deepin-dbus-factory
	patch -p1 -i ../fix-arch.patch
}

build() {
	cd deepin-dbus-factory
	make build-qml
}

package() {
	cd deepin-dbus-factory
	make DESTDIR="${pkgdir}" install-qml
}

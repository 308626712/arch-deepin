pkgname=deepin-file-manager
pkgver=0.1.0
pkgrel=1
pkgdesc='deepin file manager backend'
arch=('i686' 'x86_64')
url="https://github.com/linuxdeepin/deepin-file-manager"
license=('GPL3')
depends=('gtk3' 'poppler-glib')
makedepends=('dde-api' 'go-packages')
replaces=('deepin-file-manager-backend')
install="${pkgname}.install"
#source=("git+https://github.com/linuxdeepin/deepin-file-manager.git#tag=$pkgver")
source=("${pkgname}-${pkgver}.tar.xz")
sha256sums=('SKIP')

build(){
	cd "${pkgname}-${pkgver}"
	make GOPATH="/usr/lib/go"
}

package() {
	cd "${pkgname}-${pkgver}"
	make GOPATH="/usr/lib/go" DESTDIR="${pkgdir}" install
}

pkgname=dde-dock-applets
pkgver=14.12.20150629154830
_srcdirname=dde-dock-applets-14.12+git20150629154830~85806ffefa
pkgrel=3
pkgdesc="New control center for linux deepin"
arch=('i686' 'x86_64')
url="https://gitcafe.com/Deepin/dde-dock-applets"
license=('GPL3')
depends=('gtk2' 'qt5-svg' 'qt5-declarative')
makedepends=('deepin-gettext-tools' 'qt5-tools' 'python2')
groups=('deepin')
source=("http://ftp5.gwdg.de/pub/linux/linuxdeepin/packages/pool/main/d/dde-dock-applets/dde-dock-applets_14.12+git20150629154830~85806ffefa.tar.gz")
sha256sums=('3034c61b33711281469b9670171efb114cc54800d4260cb39c3a96b1d182563f')

build() {
	cd "${_srcdirname}"

	make
}

package() {
	depends+=('dde-daemon' 'dde-api' 'dde-qml-dbus-factory'
			  'deepin-qml-widgets' 'deepin-artwork-themes')

	cd "${_srcdirname}"

	make DESTDIR="${pkgdir}" install
}

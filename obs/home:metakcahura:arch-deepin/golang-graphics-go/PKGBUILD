# Contributor: Xu Fasheng <fasheng.xu[AT]gmail.com>

pkgname=golang-graphics-go
_pkgverbase=0.0
_pkgvergit=20140306
_pkgver=${_pkgverbase}~git${_pkgvergit}
pkgver=${_pkgverbase}.${_pkgvergit}
pkgrel=5
pkgdesc='File system notification for GO'
arch=('i686' 'x86_64')
url="http://code.google.com/p/graphics-go/"
license=('GPL2')
depends=('go>=1.3')
options=(staticlibs)
source=("http://packages.linuxdeepin.com/deepin/pool/main/g/${pkgname}/${pkgname}_${_pkgver}.orig.tar.xz")
sha256sums=('d91af80386956e33215f1dc77800051d64354a3a43b56d616e08078fa08d8314')

_gobuild_dir="${pkgname}-build"
_gopkg="code.google.com/p/graphics-go/graphics"

build(){
  cd "$srcdir"

  mkdir -p "${_gobuild_dir}"/src/"${_gopkg}"
  cp -r graphics-go/graphics/* "${_gobuild_dir}"/src/"${_gopkg}"/
  GOPATH="${srcdir}/${_gobuild_dir}" go install "${_gopkg}"
}

package() {
  cd "${srcdir}"

  mkdir -p "${pkgdir}"/usr/lib/go/src/pkg/
  mkdir -p "${pkgdir}"/usr/lib/go/pkg/
  cp -r "${_gobuild_dir}"/src/* "${pkgdir}"/usr/lib/go/src/pkg/
  cp -r "${_gobuild_dir}"/pkg/* "${pkgdir}"/usr/lib/go/pkg/
}

# Contributor:

pkgname=go-dlib
pkgver=git20140522~3948504
pkgrel=1
pkgdesc='Go-lang bingdings for dlib'
arch=('i686' 'x86_64')
url="https://github.com/linuxdeepin/go-lib"
license=('GPL2')
depends=('glib2')
makedepends=('go>=1.3' 'gettext' 'gdk-pixbuf2' 'golang-gocheck'
	     'libpulse' 'go-xgb' 'gtk3')
groups=('deepin-dev')
options=(staticlibs)
source=("${pkgname}-${pkgver}.tar.xz" 'install-path-fix.patch')
sha256sums=('SKIP' 'f18096ac5074a02e4ab04280ac3d14e815cabb7a292fbd199b98e03bae2088ec')

prepare(){
  cd "${pkgname}-${pkgver}"

  patch -i "${srcdir}/install-path-fix.patch"
}

build(){
  cd "${pkgname}-${pkgver}"

  make
}

package() {
  cd "${pkgname}-${pkgver}"

  make DESTDIR="$pkgdir/" install
}

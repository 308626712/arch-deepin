# Maintainer: Josip Ponjavic <josipponjavic at gmail dot com>
# Contributor: Xu Fasheng <fasheng.xu[AT]gmail.com>

pkgname=go-dlib
pkgver=0.0.4.20140522.3948504
pkgrel=1
pkgdesc='Go-lang bingdings for dlib'
arch=('i686' 'x86_64')
url="https://gitcafe.com/Deepin/go-lib"
license=('GPL3')
depends=('go>=1.3')
makedepends=('gettext' 'golang-gocheck' 'go-xgb'
	'gtk3' 'gdk-pixbuf2' 'libpulse'  'glib2')
groups=('deepin-dev')
options=(staticlibs)
source=("${pkgname}-${pkgver}.tar.xz")
sha256sums=('SKIP')

_gobuild_dir="${pkgname}-build"
_gopkg="pkg.linuxdeepin.com/lib"

prepare() {
  cd "${srcdir}"

  mkdir -p "${_gobuild_dir}"/src/"${_gopkg}"
  cp -r "${srcdir}-${pkgver}"/* "${_gobuild_dir}"/src/"${_gopkg}"/
  rm -rf "${_gobuild_dir}"/src/"${_gopkg}"/debian
}

build(){
  GOPATH="${srcdir}/${_gobuild_dir}" go install "${_gopkg}"
  GOPATH="${srcdir}/${_gobuild_dir}" go install "${_gopkg}"/{dbus,gdkpixbuf,gettext,gio-2.0,glib-2.0,gobject-2.0,graphic,log,pinyin,proxy,pulse,utils}
}

package() {
  cd "${srcdir}"

  mkdir -p "${pkgdir}"/usr/lib/go/src/pkg/
  cp -r "${_gobuild_dir}"/src/* "${pkgdir}"/usr/lib/go/src/pkg/
}

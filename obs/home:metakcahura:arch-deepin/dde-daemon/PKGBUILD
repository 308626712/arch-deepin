pkgname=dde-daemon
pkgver=git20140523~2c3ea42
pkgrel=1
pkgdesc='Go-lang bingdings for dde-daemon'
arch=('i686' 'x86_64')
url="https://gitcafe.com/Deepin/dde-daemon"
license=('GPL3')
depends=('dde-api' 'grub-themes-deepin' 'cairo' 'libcanberra' 'dbus' 'deepin-webkit'
    'gtk3' 'glib2' 'gdk-pixbuf2' 'gstreamer0.10' 'libsystemd' 'acpid' 'libpulse'
    'xcur2png' 'upower' 'bluez' 'polkit-gnome' 'network-manager-applet')
makedepends=('go>=1.3' 'go-dlib' 'dde-go-dbus-factory' 'go-xgb' 'go-xgbutil'
    'golang-fsnotify' 'golang-sqlite3' 'gettext' 'python2')
optdepends=()
groups=('deepin')
install="${pkgname}.install"
conflicts=('dde-daemon-gsd-input')
options=(staticlibs)
source=("${pkgname}-${pkgver}.tar.xz")
sha256sums=('SKIP')

build(){
  cd "${pkgname}-${pkgver}"

  make
}
package() {
  cd "${pkgname}-${pkgver}"

  make DESTDIR="$pkgdir/" install
}

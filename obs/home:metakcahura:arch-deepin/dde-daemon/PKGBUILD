pkgname=dde-daemon
pkgver=git20140523~2c3ea42
pkgrel=1
pkgdesc='Go-lang bingdings for dde-daemon'
arch=('i686' 'x86_64')
url="https://gitcafe.com/Deepin/dde-daemon"
license=('GPL3')
depends=('go-dlib' 'dde-go-dbus-factory' 'libgnomekbd' 'acpid' 'bluez' 'dde-api' 'go-xgb' 'grub-themes-deepin'
	 'go-xgbutil' 'golang-sqlite3' 'libpulse' 'cairo'  'metacity-ubuntu' 'xcur2png'
	 'polkit-gnome' 'network-manager-applet')
	 #'startdde'
makedepends=('gettext' 'go>=1.3' 'golang-fsnotify' 'upower' 'python2' 'gtk3' 'gtk2'
	     'libnotify' 'libcanberra' 'libsystemd' 'gnome-desktop' 'dhcpcd'
	     'libxkbfile' 'scons' 'golang-jamslam-freetype-go')
optdepends=()
groups=('deepin')
install="${pkgname}.install"
conflicts=('dde-daemon-gsd-input')
options=(staticlibs)
source=("${pkgname}-${pkgver}.tar.xz")
sha256sums=('SKIP')

build(){
  cd "${pkgname}-${pkgver}"
  
  make
}
package() {
  cd "${pkgname}-${pkgver}"
  
  make DESTDIR="$pkgdir/" install
}

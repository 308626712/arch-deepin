# Contributor: 

pkgname=qml-dde-dock-applet
pkgver=git20140507~ad18388
pkgrel=1
pkgdesc='Deepin QML widgets'
arch=('i686' 'x86_64')
url="https://gitcafe.com/Deepin/qml-dde-dock-applet"
license=('GPL2')
depends=('qt5-declarative' 'qt5-quickcontrols')
groups=('deepin')
source=("${pkgname}-${pkgver}.tar.xz")
sha256sums=('SKIP')

build(){
  cd "${pkgname}-${pkgver}"
  
  [[ -d build ]] && rm -rvf build/
  mkdir build && cd build
  
  qmake ..
  make
}

package() {
  cd "${pkgname}-${pkgver}"/build

  make INSTALL_ROOT="${pkgdir}/" install
}

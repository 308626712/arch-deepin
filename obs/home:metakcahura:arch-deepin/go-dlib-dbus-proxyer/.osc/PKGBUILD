# Contributor: 

pkgname=go-dlib-dbus-proxyer
pkgver=git20140522~3948504
pkgrel=1
pkgdesc='Go-lang bingdings for dlib'
arch=('i686' 'x86_64')
url="https://github.com/linuxdeepin/go-dlib-dbus-proxyer"
license=('GPL2')
depends=('glib2')
makedepends=('go>=1.3' 'gettext' 'go-dlib' 'golang-gocheck')
groups=('deepin')
options=(staticlibs)
source=("${pkgname}-${pkgver}.tar.xz")
sha256sums=('SKIP')

build(){
  cd "${pkgname}-${pkgver}"
  
  mkdir -p build/src/pkg.linuxdeepin.com/dbus-generator
  cp -r {example-xml,*.go,*.json,*.md} build/src/pkg.linuxdeepin.com/dbus-generator/
  cd build && GOPATH=`pwd` go install pkg.linuxdeepin.com/dbus-generator
}

package() {
  cd "${pkgname}-${pkgver}"

  install -Dm 755 build/bin/dbus-generator "${pkgdir}"/usr/bin/dbus-generator
}

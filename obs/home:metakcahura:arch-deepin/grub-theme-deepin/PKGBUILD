pkgname=grub-theme-deepin
pkgver=1.0.0
pkgrel=1
pkgdesc='Grub2 themes from Linux Deepin'
arch=('any')
url="http://www.linuxdeepin.com/"
license=('GPL3')
depends=('grub')
makedepends=('git')
#source=("git+https://github.com/linuxdeepin/deepin-grub2-themes.git#tag=$pkgver")
source=('deepin-grub2-themes.tar.xz')
sha256sums=('SKIP')

package() {
	cd deepin-grub2-themes
	make DESTDIR="${pkgdir}" install
}

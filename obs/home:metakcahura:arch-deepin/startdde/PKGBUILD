# Maintainer: Josip Ponjavic <josipponjavic at gmail dot com>

pkgname=startdde
pkgver=git20140526~23e40a1
pkgrel=1
pkgdesc="starter of deepin desktop environment"
arch=('i686' 'x86_64')
url="https://gitcafe.com/Deepin/startdde"
license=('GPL3')
depends=('dde-daemon' 'libdeepin-webkit' 'cairo')
makedepends=('cmake' 'gettext' 'coffee-script' 'python2' 'webkitgtk'
	'go>=1.3' 'go-dlib' 'dde-go-dbus-factory' 'go-fsnotify' 'go-xgbutil')
groups=('deepin')
options=(staticlibs)
conflicts=('deepin-session')
source=("${pkgname}-${pkgver}.tar.xz")
sha256sums=('SKIP')

build() {
  cd "${pkgname}-${pkgver}"

  make
}

package() {
  cd "${pkgname}-${pkgver}"

  make DESTDIR="${pkgdir}" install
}

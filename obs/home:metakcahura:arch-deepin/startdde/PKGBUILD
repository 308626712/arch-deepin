# Maintainer: Josip Ponjavic <josipponjavic at gmail dot com>

pkgname=startdde
pkgver=git20140526~23e40a1
pkgrel=1
pkgdesc="starter of deepin desktop environment"
arch=('i686' 'x86_64')
url="https://gitcafe.com/Deepin/startdde"
license=('GPL3')
depends=('dde-daemon' 'deepin-webkit' 'cairo')
makedepends=('cmake' 'gettext' 'coffee-script' 'python2' 'webkitgtk'
	'go>=1.3' 'go-dlib' 'dde-go-dbus-factory' 'go-fsnotify' 'go-xgbutil')
groups=('deepin')
options=(staticlibs)
conflicts=('deepin-session')
source=("${pkgname}-${pkgver}.tar.xz")
sha256sums=('SKIP')

build() {
  cd "${pkgname}-${pkgver}"

  GOPATH=`pwd` go build -o startdde
  mkdir dialogUI/build && cd dialogUI/build
  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release ..
}

package() {
  cd "${pkgname}-${pkgver}"

  install -dm 755 "${pkgdir}"/usr/{bin,share/xsessions}

  install -m 755 startdde "${pkgdir}"/usr/bin/
  install -m 644 *.desktop "${pkgdir}"/usr/share/xsessions/

  cd dialogUI/build && make DESTDIR="$pkgdir/" install
}

# Maintainer: Daniel MÃ¼llner <muellner@math.stanford.edu>

pkgname=autoconf-archive
pkgver=2015.02.24
pkgrel=1
epoch=1
pkgdesc="A collection of freely re-usable Autoconf macros"
arch=('any')
url="http://www.gnu.org/software/autoconf-archive/"
_watch="http://mirrors.axint.net/repos/gnu.org/autoconf-archive/"
license=('GPL')
depends=('autoconf')
optdepends=('automake: macros for use with it')
source=(http://ftpmirror.gnu.org/$pkgname/$pkgname-$pkgver.tar.xz)
md5sums=('686ece8b7db6897d9bb9db1723e419b4')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr
  make
}

check() {
  cd "$srcdir/$pkgname-$pkgver"
  make check
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/" install
}

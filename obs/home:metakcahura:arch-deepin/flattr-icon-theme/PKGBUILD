# Maintainer: Xu Fasheng <fasheng.xu[AT]gmail.com>

pkgname=flattr-icon-theme
pkgver=1.1
pkgrel=1
pkgdesc="Flattr is an icon theme for Linux desktops, the set is inspired by the latest flat design trend."
arch=('any')
url="https://github.com/NitruxSA/flattr-icons"
license=('CC BY-SA 4.0')
conflicts=('flattr-icons' 'flattr-icon-theme' 'flattr-icon-theme-git')
provides=('flattr-icon-theme')
install="${pkgname}.install"
source=("${url}/archive/v${pkgver}.tar.gz")
sha256sums=('b0887aac288dca0d7f645afad0e0b9f78e593fd596088072e0e76fe8062684d8')

package() {
	depends=('librsvg' 'gtk-update-icon-cache')

	install -dm775 "${pkgdir}"/usr/share/icons
	cp -r "${srcdir}"/flattr-icons-${pkgver} "${pkgdir}"/usr/share/icons/flattr
	find "${pkgdir}/usr/share/icons" -type d -exec chmod 755 '{}' \;
	find "${pkgdir}/usr/share/icons" -type f -exec chmod 644 '{}' \;
	install -Dm644 "${pkgdir}"/usr/share/icons/flattr/LICENSE "${pkgdir}"/usr/share/licenses/${pkgname}/LICENSE
}

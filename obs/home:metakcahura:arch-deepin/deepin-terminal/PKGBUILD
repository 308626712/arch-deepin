# Contributor:

pkgname=deepin-terminal
pkgver=1.1.20140515.a4c7a46
pkgrel=1
pkgdesc='Awesome terminal for Linux Deepin'
arch=('any')
url="https://gitcafe.com/Deepin/deepin-terminal"
license=('GPL3')
depends=('deepin-ui' 'deepin-vte-plus' 'gtk-update-icon-cache' 'python2-dbus' 'python2-scipy')
groups=('deepin-extra')
install="${pkgname}.install"
source=("${pkgname}-${pkgver}.tar.xz")
sha256sums=('SKIP')

prepare(){
  # fix python version
  find "${srcdir}" -iname "*.py" | xargs sed -i 's=\(^#! */usr/bin.*\)python *$=\1python2='
}

package() {
  cd "${pkgname}-${pkgver}"

  make DESTDIR="${pkgdir}/" PREFIX=/usr install
}

# Maintainer: Xu Fasheng <fasheng.xu[AT]gmail.com>

pkgname=dde-control-center
pkgver=2.90.3
pkgrel=1
pkgdesc="New control center for linux deepin"
arch=('i686' 'x86_64')
url="https://gitcafe.com/Deepin/dde-control-center"
license=('GPL3')
depends=('qt5-svg' 'qt5-multimedia')
makedepends=('deepin-gettext-tools' 'git' 'gtk2' 'qt5-declarative' 'qt5-tools')
#source=("git+https://github.com/linuxdeepin/dde-control-center.git#tag=$pkgver")
source=('dde-control-center.tar.xz')
sha256sums=('SKIP')

prepare() {
	cd dde-control-center
	# fix python version
	find -iname "*.py" | xargs sed -i 's=\(^#! */usr/bin.*\)python *$=\1python2='
	sed 's/qmake/qmake-qt5/' -i Makefile
}

build(){
	cd dde-control-center
	make
}

package() {
	depends+=('dde-account-faces' 'dde-api' 'dde-daemon' 'deepin-artwork-themes'
			  'deepin-dbus-factory' 'deepin-qml-widgets')
	cd dde-control-center
	make DESTDIR="${pkgdir}" install
}

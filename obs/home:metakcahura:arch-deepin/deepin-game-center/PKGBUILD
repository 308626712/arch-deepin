# Contributor: 

pkgname=deepin-game-center
pkgver=git20140509~c0cac57
pkgrel=1
pkgdesc="Game center for Linuxdeepin"
arch=('any')
url="https://gitcafe.com/Deepin/deepin-game"
license=('GPL2')
depends=('deepin-ui' 'flashplugin' 'hicolor-icon-theme' 'python2-deepin-storm'
	 'python2-scipy' 'python2-jswebkit')
groups=('deepin-extra')
install="${pkgname}.install"
options=(staticlibs)
source=("$pkgname-${pkgver}.tar.xz" 'arch-makefile-fix.patch')
noextract=("${pkgname}-${pkgver}.tar.xz")
sha256sums=('SKIP' 'b06b22b9f2636f905400683f17257424edd92645d842a8a54e881be38da94bae')

prepare() {
  cd "$srcdir"

  tar -C "$srcdir" -xvJf ${pkgname}-${pkgver}.tar.xz
  
  cd "${pkgname}-${pkgver}"
  
  patch -i "${srcdir}/arch-makefile-fix.patch"

  # fix python version
  find -iname "*.py" | xargs sed -i 's=\(^#! */usr/bin.*\)python=\1python2='
}

package() {
  cd "${pkgname}-${pkgver}"

  make DESTDIR="${pkgdir}/" install
}

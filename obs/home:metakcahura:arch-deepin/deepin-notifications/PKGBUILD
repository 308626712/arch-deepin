pkgname=deepin-notifications
pkgver=0.3.20150311135741
_srcdirname=deepin-notifications-0.3+20150311135741~2d222740e3
pkgrel=1
pkgdesc="System notifications for linuxdeepin desktop environment."
arch=('i686' 'x86_64')
url="https://gitcafe.com/Deepin/deepin-notifications"
license=('GPL3')
groups=('deepin')
depends=('qt5-declarative' 'qt5-svg')
conflicts=('notify-osd')
source=("http://packages.linuxdeepin.com/deepin/pool/main/d/deepin-notifications/deepin-notifications_0.3+20150311135741~2d222740e3.tar.gz")
sha256sums=('aec9737063710133fdcc4e1119c26695fe7444bce32c08456af90e75c06435ee')

build() {
  cd "${_srcdirname}"

  qmake PREFIX=/usr
  make
}

package() {
  cd "${_srcdirname}"

  make INSTALL_ROOT="${pkgdir}" install
}

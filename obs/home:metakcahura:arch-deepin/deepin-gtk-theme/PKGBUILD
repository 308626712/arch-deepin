license=('LGPL3')
optdepends=('gtk-engine-murrine: for gtk2 themes')
groups=('deepin')
#source=("git+https://github.com/linuxdeepin/deepin-gtk-theme.git#commit=$_commit")
source=('deepin-gtk-theme.tar.xz')

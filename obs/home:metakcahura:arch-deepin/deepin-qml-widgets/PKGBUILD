# Contributor: 

pkgname=deepin-qml-widgets
pkgver=git20140522~d0f293d
pkgrel=1
pkgdesc='Deepin QML widgets'
arch=('i686' 'x86_64')
url="https://gitcafe.com/Deepin/deepin-qml-widgets"
license=('GPL3')
depends=('qt5-multimedia' 'qt5-webkit' 'qt5-imageformats'
	 'qt5-graphicaleffects' 'qt5-x11extras' 'qtchooser')
groups=('deepin')
options=('!emptydirs')
source=("${pkgname}-${pkgver}.tar.xz")
sha256sums=('SKIP')

build(){
  cd "${pkgname}-${pkgver}"
  
  qmake && make
}

package() {
  cd "${pkgname}-${pkgver}"

  make INSTALL_ROOT="${pkgdir}/" install
}

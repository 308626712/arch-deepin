pkgname='libdtk-widget'
pkgver=git20130815124854~8759cb0fb5
pkgrel=1
pkgdesc='Deepin widget of Chinese Lunar library'
arch=('any')
url="http://www.linuxdeepin.com/"
license=('GPL2')
depends=('deepin-pygtk-fix' 'glib2' 'gdk-pixbuf2')
makedepends=('autogen' 'gobject-introspection' 'python2' 'python2-gobject2' 'pygobject2-devel' 'gtk-doc')

_fileurl=http://packages.linuxdeepin.com/deepin/pool/main/d/dtk-widget/dtk-widget_0.5+git20130815124854~8759cb0fb5.tar.gz
source=("${_fileurl}")
md5sums=('68ff3d8fa8d64598dfba20e434b0629a')

_filename="$(basename "${_fileurl}")"
_filename="${_filename%.tar.gz}"
_innerdir="${_filename/_/-}"

_install_copyright_and_changelog() {
    mkdir -p "${pkgdir}/usr/share/doc/${pkgname}"
    cp -f debian/copyright "${pkgdir}/usr/share/doc/${pkgname}/"
    gzip -c debian/changelog > "${pkgdir}/usr/share/doc/${pkgname}/changelog.gz"
}

build() {
    cd "${srcdir}/${_innerdir}"
    env PYTHON="/usr/bin/python2" ./autogen.sh --prefix=/usr
    make clean
    make
}


# Maintainer: Xu Fasheng <fasheng.xu[AT]gmail.com>

pkgname=grub2-themes-deepin
pkgver=0.1
pkgrel=1
pkgdesc='Grub2 themes from Linux Deepin'
arch=('any')
url="http://www.linuxdeepin.com/"
license=('GPL2')
depends=('grub')

_fileurl=http://packages.linuxdeepin.com/deepin/pool/main/g/grub-themes-deepin/grub-themes-deepin_0.1.orig.tar.gz
source=("${_fileurl}")
md5sums=('eda7117ba1a4413e286b8a9d66d10657')

_install_copyright_and_changelog() {
    mkdir -p "${pkgdir}/usr/share/doc/${pkgname}"
    cp -f debian/copyright "${pkgdir}/usr/share/doc/${pkgname}/"
    gzip -c debian/changelog > "${pkgdir}/usr/share/doc/${pkgname}/changelog.gz"
}

package() {
    cd "${srcdir}"

    # _easycp "${pkgdir}"/usr/share/deepin-terminal/ app_theme
    cp -rf boot "${pkgdir}"

    _install_copyright_and_changelog
}
